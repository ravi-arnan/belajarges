<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryVariant"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_add_task"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Pemrograman Mobile" />

            <ImageButton
                android:id="@+id/btn_add_task"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_edit_course"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Tambah Tugas"
                android:src="@drawable/ic_add_task"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btn_edit_course"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_delete_course"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit Mata Kuliah"
                android:src="@drawable/ic_edit"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btn_delete_course"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Hapus Mata Kuliah"
                android:src="@drawable/ic_delete"
                app:tint="@color/white" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            tools:itemCount="2"
            tools:listitem="@layout/item_task" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
